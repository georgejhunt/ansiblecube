[Unit]
Description=Launch hostapd
After=syslog.target network.target

[Service]
PIDFile=/var/run/hostapd.pid
ExecStartPre=/bin/sh -c '/bin/cat /etc/hostapd/hostapd.conf.orig | /bin/sed "s/HOSTID_SUFFIX$/`hostid`/" > /etc/hostapd/hostapd.conf && chmod 755 /etc/hostapd/hostapd.conf'
ExecStart=/usr/sbin/hostapd -P /var/run/hostapd.pid /etc/hostapd/hostapd.conf
KillSignal=SIGINT
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
